{
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "-v",
        "-s",
    ],
    "files.exclude": {
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
        "**/.vscode/**": true,
        "runtime.txt": true,
        "Procfile": true,
    },
    "search.exclude": {
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
    },
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
    },
    "python.formatting.provider": "black",
}
